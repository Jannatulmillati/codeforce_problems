
#include <bits/stdc++.h>
using namespace std;
int main(){
    int n; cin>>n;
    vector<int>a(n);
    for(int &i:a) cin>>i;
    sort(a.rbegin(),a.rend());
    int total = accumulate(a.begin(),a.end(),0), sum=0,cnt=0;
    for(int x:a){
        sum += x; cnt++;
        if(sum > total-sum) break;
    }
    cout<<cnt;
}

